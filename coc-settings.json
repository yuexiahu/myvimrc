{
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.formatOnSaveFiletypes": ["go"],
    "diagnostic.virtualText": true,
    "diagnostic.warningSign": "\uf071",
    "suggest.autoTrigger": "always",
    "signature.target": "echo",
    "suggest.labelMaxLength": 80,

    "pairs.enableCharacters": [
        "(",
        "[",
        "{",
        "'",
        "\"",
        "`"
    ],

    "list.insertMappings": {
        "<C-j>": "normal:j",
        "<C-k>": "normal:k"
    },
    "list.normalMappings": {
        "<C-j>": "normal:j",
        "<C-k>": "normal:k"
    },

    "languageserver": {
        "ccls": {
            "enable": false, //clangd is better
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "trace.server": "verbose",
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "client": {
                    "snippetSupport": true
                },
                "highlight": { "lsRanges" : true }
            }
        }
    },

    "clangd.enabled": true,
    "clangd.inlayHints.enable": false,
    "go.goplsOptions": {
        "completeUnimported": true
    },
    "python.jediEnabled": false,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.3/clangd_14.0.3/bin/clangd"
}
